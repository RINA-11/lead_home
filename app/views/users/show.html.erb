<div class="users-show-wrapper">
  <div class="container">
    <table class="table">
      <tbady>
        <tr>
          <th>
            ユーザー名
          </th>
          <td>
            <%= @user.name %>
          </td>
        </tr>
        <tr>
          <th>
            メールアドレス
          </th>
          <td>
            <%= @user.email %>
          </td>
        </tr>
        <tr>
          <th>
            パスワード
          </th>
          <td>
            非表示
          </td>
        </tr>
      </tbady>
    </table>
    <%= link_to "編集", edit_user_path(id: current_user.id), class: "fas fa-user-edit" %>
    <%= link_to "削除", user_path, method: :delete, class: "fas fa-user-slash" %>
    <% @posts.each do |post| %>
      <div>
        <%= link_to post_path(id: post.id) do %>
          <%= image_tag post.image.post_image1.url(:thumb150) %>
          <%= Purpose.find_by(id: post.purpose_id).name %>
          <%= post.happened_at.strftime("%Y年%m月%d日") %>
          <%= Prefecture.find_by(id: post.prefecture_id).name + City.find_by(id: post.city_id).name %>
          <%= PetCategory.find_by(id: post.pet_category_id).name %>
          <%= PetSex.find_by(id: post.pet_sex_id).name %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>