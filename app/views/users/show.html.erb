<div class="users-show-wrapper">
  <div class="user-info row">
    <div class="col-xs-offset-2 col-xs-8">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h1 class="panel-title text-center">ユーザー情報</h1>
        </div>
        <div class="panel-body table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <th>ユーザー名</th>
                <td><%= @user.name %></td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td><%= @user.email %></td>
              </tr>
              <tr>
                <th>パスワード</th>
                <td><%= @user.password %></td>
              </tr>
            </tbody>
          </table>
          <div class="user-info-links">
            <%= link_to edit_user_path(id: current_user.id), class: "btn btn-default" do %>
              <div class="fas fa-user-edit">編集</div>
            <% end %>
            <%= link_to user_path, method: :delete, class: "btn btn-default" do %>
              <div class="fas fa-user-slash">削除</div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="user-posts">
    <div class="page-header">
      <h2 class="text-center">投稿一覧</h2>
    </div>
    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-xs-6 col-sm-4 col-md-3">
          <%= link_to post_path(id: post.id), class: "panel panel-default thumbnail" do %>
            <%= image_tag post.image.post_image1.url(:thumb200), class: "img-rounded" %>
            <div class="panel-heading">
              <h1 class="panel-title text-center"><%= @purposes.find_by(id: post.purpose_id).name %></h1>
            </div>
            <div class="panel-body table-responsive">
              <p class="panel-text">名前：<%= post.pet_name unless post.pet_name.blank? %></p>
              <p class="panel-text">日付：<%= post.happened_at.strftime("%Y年%m月%d日") %></p>
              <p class="panel-text">場所：<%= @prefectures.find_by(id: post.prefecture_id).name + @cities.find_by(id: post.city_id).name %></p>
              <p class="panel-text">種類：<%= @pet_categories.find_by(id: post.pet_category_id).name %></p>
              <p class="panel-text">品種：<%= post.pet_breed unless post.pet_breed.blank? %></p>
              <p class="panel-text">性別：<%= @pet_sexes.find_by(id: post.pet_sex_id).name %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="paginate">
    <%= paginate @posts %>
  </div>
</div>