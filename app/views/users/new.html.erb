<div class="users-new-wrapper">
  <div class="panel">
    <div class="panel-heading">
      <h1 class="panel-title text-center">ユーザー登録</h1>
    </div>
    <div class="panel-body table-responsive">
      <%= form_with model: @user, method: :post, local: true, class: "form-horizontal" do |f| %>
        <%# ユーザー名 %>
        <div class="form-group">
          <%= f.label :name, "ユーザー名", class: "control-label col-sm-3" %>
          <div class="col-sm-7">
            <%= f.text_field :name, class: "form-control", placeholder: "ユーザー名", required: true %>
            <small class="form-text text-muted">30文字以内</small>
            <% if @user.errors.include?(:name) %>
              <p class="error-message">
                ※<%= @user.errors.full_messages_for(:name).first %>
              </p>
            <% end %>
          </div>
        </div>
        <%# メールアドレス %>
        <div class="form-group">
          <%= f.label :email, "メールアドレス", class: "control-label col-sm-3" %>
          <div class="col-sm-7">
            <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス", required: true %>
            <% if @user.errors.include?(:email) %>
              <p class="error-message">
                ※<%= @user.errors.full_messages_for(:email).first %>
              </p>
            <% end %>
          </div>
        </div>
        <%# パスワード %>
        <div class="form-group">
          <%= f.label :password, "パスワード", class: "control-label col-sm-3" %>
          <div class="col-sm-7">
            <%= f.password_field :password, class: "form-control", placeholder: "パスワード", required: true %>
            <small class="form-text text-muted">6〜10文字(半角英数字)</small>
            <% if @user.errors.include?(:password) %>
              <p class="error-message">
                ※<%= @user.errors.full_messages_for(:password).first %>
              </p>
            <% end %>
          </div>
        </div>
        <%# パスワード確認 %>
        <div class="form-group">
          <%= f.label :password_confirmation, "パスワード確認", class: "control-label col-sm-3" %>
          <div class="col-sm-7">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード確認", required: true %>
            <small class="form-text text-muted">6〜10文字(半角英数字)</small>
            <% if @user.errors.include?(:password_confirmation) %>
              <p class="error-message">
                ※<%= @user.errors.full_messages_for(:password_confirmation).first %>
              </p>
            <% end %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "登録", class: "btn col-xs-offset-4 col-xs-4 col-sm-offset-5 col-sm-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>