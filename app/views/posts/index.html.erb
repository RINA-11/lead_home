<div class="posts-index-wrapper">
  <div class="container">
    <div class="search-form">
      <p>検索</p>
      <%= form_with url: posts_path, local: true, method: :get, class: "form-horizontal" do |f| %>
        <div class="form-group">
          <%= f.label :purpose_id, "投稿の種類", class: "control-label col-xs-3" %>
          <div class="col-xs-9">
            <%= f.collection_radio_buttons :purpose_id, @purposes, :id, :name, { checked: params[:purpose_id] } %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :prefecture_id, "都道府県", class: "control-label col-xs-3" %>
          <div class="col-xs-9">
            <%= f.collection_select :prefecture_id, @prefectures, :id, :name, { prompt: "選択してください" }, { class: "form-control" } %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :city_id, "市区町村", class: "control-label col-xs-3" %>
          <div class="col-xs-9">
            <%= f.select :city_id, options_for_select(@cities.map { |c|[c[:name], c[:id], { "data-id" => c[:prefecture_id] }] }), { prompt: "選択してください" }, { class: "form-control", id: :city_id } %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :pet_category_id, "カテゴリー", class: "control-label col-xs-3" %>
          <div class="col-xs-9">
            <%= f.collection_select :pet_category_id, @pet_categories, :id, :name, { prompt: "選択してください", selected: params[:pet_category_id] }, { class: "form-control" } %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :pet_sex_id, "性別", class: "control-label col-xs-3" %>
          <div class="col-xs-9">
            <%= f.collection_radio_buttons :pet_sex_id, @pet_sexes, :id, :name, { class: "form-check-input", checked: params[:pet_sex_id] } %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "検索", class: "col-xs-offset-3 col-xs-3 btn btn-default" %> <%= link_to "リセット", posts_path, class: "col-xs-3 btn btn-default" %>
        </div>
      <% end %>
    </div>
    
    <div class="row">
        <% @posts.each do |post| %>
          <div class="col-xs-6 col-sm-4 col-md-3">
            <%= link_to post_path(id: post.id) do %>
              <div class="panel panel-info center-block thumbnail border">
                <%= image_tag post.image.post_image1.url(:thumb200), class: "panel-img-top img-rounded" %>
                <div class="panel-heading">
                  <h4 class="panel-title"><%= @purposes.find_by(id: post.purpose_id).name %></h4>
                </div>
                <div class="panel-body">
                  <p class="panel-text"><%= post.pet_name unless post.pet_name.blank? %></p>
                  <p class="panel-text"><%= post.happened_at.strftime("%Y年%m月%d日") %></p>
                  <p class="panel-text"><%= @prefectures.find_by(id: post.prefecture_id).name + @cities.find_by(id: post.city_id).name %></p>
                  <p class="panel-text"><%= @pet_categories.find_by(id: post.pet_category_id).name %></p>
                  <p class="panel-text"><%= @pet_sexes.find_by(id: post.pet_sex_id).name %></p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
    </div>
    <%= paginate @posts %>
    
</div>