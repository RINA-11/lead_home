<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
    <title>Lead Home</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>
    <nav class="navbar navbar-dark bg-primary navbar-default "> <%#navbar-fixed-top%>
      <div class="container">
        <div class="navbar-header">
          <%= link_to "Lead Home", home_top_path, class:"navbar-brand" %>
          <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div id="navbar" class="navbar-right collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="nav-item">
              <%= link_to "掲示板へ", posts_path, class:"nav-link" %>
            </li>
            <% if logged_in? %>
            <li class="nav-item">
              <%= link_to "投稿する", new_post_path, class:"nav-link" %>
            </li>
              <li class="nav-item">
                <a class="nav-link" href="#">クリップ一覧</a>
              </li>
              <li class="nav-item">
                <%= link_to "マイページ", user_path(current_user.id), class:"nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", session_path(current_user.id), method: :delete, class:"nav-link" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "ユーザー登録", new_user_path, class:"nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_session_path, class:"nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>
    
    <script>
      $(function(){
        $(".alert").fadeOut(5000);
      });
    </script>
  </body>
</html>